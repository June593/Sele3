<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="AllTests" parallel="false" thread-count="1">

    <!-- Default parameters -->
    <parameter name="browser" value="chrome"/>
    <parameter name="retryType" value="immediate"/>
    <parameter name="maxRetry" value="0"/>
    <parameter name="language" value="en"/>

    <listeners>
        <listener class-name="com.sele3.testng.TestListener"/>
    </listeners>

    <!-- Agoda -->
    <test name="AgodaGroup">
        <parameter name="environment" value="agoda"/>
        <groups>
            <run>
                <include name="agoda"/>
            </run>
        </groups>
        <packages>
            <package name="sele3.agoda"/>
        </packages>
    </test>

    <!-- VietJet -->
    <test name="VietJetGroup">
        <parameter name="environment" value="vietjet"/>
        <groups>
            <run>
                <include name="vietjet"/>
            </run>
        </groups>
        <packages>
            <package name="java.sele3.vietjet"/>
        </packages>
    </test>

    <!-- LeapFrog -->
    <test name="LeapFrogGroup">
        <parameter name="environment" value="leapfrog"/>
        <groups>
            <run>
                <include name="leapfrog"/>
            </run>
        </groups>
        <packages>
            <package name="sele3.leapFrog"/>
        </packages>
    </test>

    <!-- Book -->
    <test name="BookGroup">
        <parameter name="environment" value="book"/>
        <groups>
            <run>
                <include name="book"/>
            </run>
        </groups>
        <packages>
            <package name="sele3.book"/>
        </packages>
    </test>
</suite>
